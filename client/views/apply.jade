                .col-md-8
                    input(type="text" name="empState2" class="form-control" id="empState2" placeholder="State")
            .form-group
                label(for="description2" class="col-md-4 control-label") Description
                .col-md-8
                    input(type="text" name="description2" class="form-control" id="description2" placeholder="Brief Description of Position")
